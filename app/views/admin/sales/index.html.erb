<section class="admin-products-index">

  <header class="page-header">
    <h1>Admin &raquo; All Products</h1>
  </header>

  <div class="well">
    <%= link_to 'New Sale', [:new, :admin, :sale], class: 'btn btn-success' %>
  </div>

  <div class="panel panel-default sales mt-2">

    <table class="table table-bordered">
      <thead>
        <tr>
          <th>Sale</th>
          <th>Start Date</th>
          <th>End Date</th>
          <th>Discount</th>
          <th>Status</th>
        </tr>
      </thead>
      <tbody>

        <%= render @sales %>
      </tbody>
    </table>

  </div>

</section>
